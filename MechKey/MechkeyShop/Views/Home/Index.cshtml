@{
    ViewData["Title"] = "Home Page";
    IEnumerable<Shared.ViewModels.CategoryModel> listCategory = ViewBag.listCategory;
}
@model IEnumerable<Shared.ViewModels.ProductModel>
<section id="slider">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://bizweb.dktcdn.net/100/484/752/themes/920128/assets/slider_3.jpg?1741096398057" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://bizweb.dktcdn.net/100/484/752/themes/920128/assets/slider_3.jpg?1741096398057" class="d-block w-100" alt="..." style="object-fit: contain;">
            </div>
            <div class="carousel-item">
                <img src="https://bizweb.dktcdn.net/100/484/752/themes/920128/assets/slider_3.jpg?1741096398057" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<section id="services">
    <div class="container">
        <div class="list-services">
            <div class="services-item">
                <i class="fa-solid fa-truck-fast"></i>
                <div class="services-content">
                    <h3>Fast Shipping</h3>
                    <p>Fast shipping on all orders</p>
                </div>
            </div>
            <div class="services-item">
                <i class="fa-solid fa-headset"></i>
                <div class="services-content">
                    <h3>24/7 Support</h3>
                    <p>Support 24/7</p>
                </div>
            </div>
            <div class="services-item">
                <i class="fa-solid fa-money-bill-1-wave"></i>
                <div class="services-content">
                    <h3>Hot Update</h3>
                    <p>Always update new product</p>
                </div>
            </div>
            <div class="services-item">
                <i class="fa-solid fa-money-bill-1-wave"></i>
                <div class="services-content">
                    <h3>100% Secure Payments</h3>
                    <p>Gurantee secure payments</p>
                </div>

            </div>
        </div>
    </div>
    
</section>

<section class="banner-sales bg-gradient-blue-purple">
    <div class="container">
        <div class="banner">
            <div class="banner__content">
                <h2>NEW PRODUCT</h2>
                <p class="name-product">Neo60 Core</p>
                <p>
                    Best 60% budget from Neo Studio
                </p>
                <button class="btn btn-gradient-blue-purple btn-shop-now">Shop Now</button>
            </div>
             <div class="banner__img">
                 <img src="https://bizweb.dktcdn.net/thumb/1024x1024/100/484/752/products/is-case-1741345843760.png?v=1743766263623" alt="">
             </div>
        </div>
    </div>

</section>


<div class="list-product-hot">
    <h2 class="text-center text-black">
        Hot Products <i class="fa-solid fa-fire"></i>
    </h2>
    <div class="container">
        <div class="row mt-4 py-2">

            @foreach (var items in Model)
            {
                <div class="col-md-3">
                    <div class="product-item">
                        <div class="product-item__img">
                            <img src="@items.ImageUrl" alt="product-img">
                        </div>
                        <div class="product-item__content">
                            <div class="product-rating">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <span class="rating-number">(5)</span>

                                </div>
                            </div>
                            <h3 class="name">@items.Name</h3>
                            <span class="price">$@items.Price</span>
                        </div>
                        <div class="product-item__footer">
                            <button class="btn btn-outline"> <i class="fa-solid fa-eye"></i> </button>
                            <button class="btn btn-gradient-blue-purple">Add to cart</button>
                            <button class="btn btn-outline"><i class="fa-solid fa-heart"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<section class="container category">
    <h2 class="tilte-section"> <i class="fa-solid fa-tag"></i> Categories</h2>
    <p>Browse by Category</p>

    <div class="list-category">
        <a class="category-item btn" asp-controller="Product" asp-action="Index">
            <p>All</p>
        </a>
        @foreach (var item in listCategory)
        {
            <a class="category-item btn" asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.Id">
                <p>@item.Name</p>
            </a>
        }
    </div>

    <div class="row mt-4">
        @foreach (var items in Model)
        {
            <div class="col-md-3">
                <div class="product-item">
                    <div class="product-item__img">
                        <img src="@items.ImageUrl" alt="product-img">
                    </div>
                    <div class="product-item__content">
                        <div class="product-rating">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <span class="rating-number">(5)</span>

                            </div>
                        </div>
                        <h3 class="name">@items.Name</h3>
                        <span class="price">$@items.Price</span>
                    </div>
                    <div class="product-item__footer">
                        <button class="btn btn-outline"> <i class="fa-solid fa-eye"></i> </button>
                        <button class="btn btn-gradient-blue-purple">Add to cart</button>
                        <button class="btn btn-outline"><i class="fa-solid fa-heart"></i></button>
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="d-flex align-items-center justify-content-center mt-4">
        <button class="btn btn-gradient-red-orange">View More</button>
    </div>
</section>

<section id="files-support" class="container files-support">
    <h2 class="tilte-section"> <i class="fa-solid fa-file"></i> Files Support </h2>
    <div>
        <ul>
            <li>
                <a href="">
                    Firmware ND75 (json)
                </a>
            </li>
            <li>
                <a href="https://www.qwertykeys.com/pages/fw">
                    Firmware + Json Neo Studio (Neo65, Neo70, Neo80, Neo Ergo .....)
                </a>
            </li>
        </ul>
    </div>
</section>


