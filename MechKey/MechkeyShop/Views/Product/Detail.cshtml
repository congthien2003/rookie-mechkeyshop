    .title-section {
        font-size: 28px;
        font-weight: bold;
    }

    .detail--expand {
        margin-top: 40px;
        padding: 2rem 4rem;
    }

    .reviews  {
        gap: 80px;
    }

    .list-review {
        display: flex;
        flex-direction: column;
        gap: 24px;
        scrollbar-width: thin;
    }

        .reviews h3,
        .write-review h3 {
            font-size: 18px;
            font-weight: bold;
        }

    .review-items {
        padding: 0.5rem 1rem;
        border: 1px solid #cecece;
        border-radius: 12px;
    }

    .review-items:hover {

        background-color: #f5f5f5;

