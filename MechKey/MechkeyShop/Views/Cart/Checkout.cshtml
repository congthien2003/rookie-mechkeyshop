@model CheckoutViewModel

@section Scripts {
    <script>
        console.log(getCart());
        renderCart();
    </script>
}
@{
    ViewBag.Title = "Checkout";
    var total = Model.CartItems.Sum(item => item.Price * item.Quantity);
}

<div class="container py-5">
    <h2 class="mb-4">Checkout</h2>

    <div class="row">
        <!-- Left: User Info -->
        <div class="col-md-6">
            <h4>Customer Information</h4>
            <div class="mb-3">
                <label class="form-label">Full Name:</label>
                <input type="text" class="form-control" value="@Model.User.Name" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input type="email" class="form-control" value="@Model.User.Email" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Phone:</label>
                <input type="text" class="form-control" value="@Model.User.Phone" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Address:</label>
                <textarea class="form-control" rows="3" readonly>@Model.User.Address</textarea>
            </div>
        </div>

        <!-- Right: Cart Info -->
        <div class="col-md-6">
            <h4>Your Cart</h4>
            <ul id="cart-items">
            </ul>
            <p class="mt-2 d-flex align-items-center justify-content-between order-total">Total: $ <span id="total-price">1440</span></p>
            <form method="post" action="/Checkout/Submit">
                <button type="submit" class="btn btn-gradient-blue-purple w-100 mt-3">Place Order</button>
            </form>
        </div>
    </div>
</div>

<style>
    .info-name {
        font-size: 14px;
    }
</style>
